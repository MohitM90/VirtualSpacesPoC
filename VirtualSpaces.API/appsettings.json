{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "[Id of your Azure AD directory]",
    "ClientId": "[Application Id of your web API app registration]",
    // To call an API
    "ClientSecret": "[Client Secret from your web API app registration]"
  },
  "Graph": {
    "BaseUrl": "https://graph.microsoft.com/beta",
    "Scopes": "user.read"
  },
  "AllowedHosts": "*"
}
